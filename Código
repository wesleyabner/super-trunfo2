
import random

# Cartas de animais
cartas = [
    {"nome": "LeÃ£o", "forÃ§a": 90, "velocidade": 80, "inteligÃªncia": 60, "resistÃªncia": 70},
    {"nome": "Elefante", "forÃ§a": 95, "velocidade": 40, "inteligÃªncia": 70, "resistÃªncia": 90},
    {"nome": "Guepardo", "forÃ§a": 65, "velocidade": 100, "inteligÃªncia": 60, "resistÃªncia": 60},
    {"nome": "Corvo", "forÃ§a": 30, "velocidade": 60, "inteligÃªncia": 95, "resistÃªncia": 50},
    {"nome": "Urso Polar", "forÃ§a": 85, "velocidade": 50, "inteligÃªncia": 65, "resistÃªncia": 95}
]

# Placar
pontos_jogador = 0
pontos_pc = 0

# NÃºmero de rodadas
rodadas = int(input("Quantas rodadas vocÃª quer jogar? "))

for rodada in range(1, rodadas + 1):
    print(f"\nðŸ”· RODADA {rodada}")

    # Sorteio de cartas
    carta_jogador = random.choice(cartas)
    carta_pc = random.choice([c for c in cartas if c != carta_jogador])

    # Exibe carta do jogador
    print("\nðŸ§ Sua carta:")
    for chave, valor in carta_jogador.items():
        print(f"{chave.capitalize()}: {valor}")

    # Escolha do atributo
    atributo = input("\nEscolha um atributo (forÃ§a, velocidade, inteligÃªncia, resistÃªncia): ").lower()
    while atributo not in ["forÃ§a", "velocidade", "inteligÃªncia", "resistÃªncia"]:
        atributo = input("Atributo invÃ¡lido. Escolha novamente: ").lower()

    valor_jogador = carta_jogador[atributo]
    valor_pc = carta_pc[atributo]

    print(f"\nðŸ’» Carta do computador: {carta_pc['nome']} - {atributo.capitalize()}: {valor_pc}")

    # Resultado da rodada
    if valor_jogador > valor_pc:
        print("âœ… VocÃª venceu a rodada!")
        pontos_jogador += 1
    elif valor_jogador < valor_pc:
        print("âŒ VocÃª perdeu a rodada.")
        pontos_pc += 1
    else:
        print("âš–ï¸ Empate!")

    # Placar parcial
    print(f"ðŸ”¢ Placar: VocÃª {pontos_jogador} x {pontos_pc} Computador")

# Resultado final
print("\nðŸ FIM DO JOGO!")
if pontos_jogador > pontos_pc:
    print("ðŸŽ‰ ParabÃ©ns, vocÃª venceu o jogo!")
elif pontos_jogador < pontos_pc:
    print("ðŸ˜¢ Que pena, o computador venceu.")
else:
    print("ðŸ¤ O jogo terminou empatado!")
